@model List<u21442453_HW04.Models.Orphan>
@{
    ViewBag.Title = "Become Helper";
    List<string> grades = new List<string>();
    try
    {
    for (int i = 0; i < Model.Count; i++)
    {
        grades.Add(Model[i].getGrade());
    }
    }
    catch
    {
        System.Diagnostics.Debug.WriteLine("Error");
    }
}

<h2>Become a Homework Helper.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="fName">First Name:</label>
            <input type="text" name="fName" class="form-control" id="fName" />
            <label for="lName">Last Name:</label>
            <input type="text" name="lName" class="form-control" id="lName" />
            <label for="age">Age:</label>
            <input type="number" name="age" class="form-control" id="age" />
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" id="email" />
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" name="phoneNumber" class="form-control" id="phoneNumber" />
            <br />
            <label for="grade">Grade to Help:</label>
            <span>
                <select id="grade" name="grade">
                       @foreach (var grade in grades)
                       {
                           <option value="@grade">@grade</option>
                       }
                </select>
                <br />
                <br />
            </span>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
            <br />
            <p class="@ViewBag.Style" style="max-width: fit-content; margin-top: 20px"><strong>@ViewBag.Message</strong></p>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
