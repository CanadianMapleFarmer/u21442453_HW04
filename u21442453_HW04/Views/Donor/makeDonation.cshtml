
@{
    ViewBag.Title = "Make a Donation";
}

<h2>Become a Donor.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="fName">First Name:</label>
            <input type="text" name="fName" class="form-control" id="fName" />
            <label for="lName">Last Name:</label>
            <input type="text" name="lName" class="form-control" id="lName" />
            <label for="age">Age:</label>
            <input type="number" name="age" class="form-control" id="age" />
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" id="email" />
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" name="phoneNumber" class="form-control" id="phoneNumber" />
            <br />
            <label for="type">Item to donate:</label>
            <span>
            <select id="type" name="type">
                    <option value="Food">Food</option>
                    <option value="Clothes">Clothes</option>
                    <option value="Sanitary">Sanitary</option>
                    <option value="Hygiene">Hygiene</option>
            </select>
            <br />
            <br />
            <label for="quantity">Quantity of item to donate:</label>
            <input type="number" name="quantity" class="form-control" value="1" min="1" id="quantity" />
            </span>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
            <br />
            <p class="@ViewBag.Style" style="max-width: fit-content; margin-top: 20px"><strong>@ViewBag.Message</strong></p>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

